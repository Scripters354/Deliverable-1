@model MvC.Models.mvcAboutModel
@{
    ViewBag.Title = "AddOrEdit";
}
<br /><br />
<div class="form-body">
    @using(Html.BeginForm())
    {
        @Html.HiddenFor(model => model.About_Malaria_ID) 

        <div class="form-group">
            @Html.LabelFor(model => model.Malaria_Description, "Malaria Description") 
            @Html.EditorFor(model => model.Malaria_Description) 
            @Html.ValidationMessageFor(model => model.Malaria_Description)
        </div> 

        <div class="form-group">
            @*<input type="submit" value="Submit" class="btn-button" />*@
            <button type="submit" value=""><i class="fas fa-save" style="font-size:20px;color:darkblue"></i></button>
            <button type="reset" value="Clear"><i class="fas fa-broom" style="font-size:20px;color:darkblue"></i>Clear</button>
        </div>
    }
</div>

